<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerMenuItem">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:width">@dimen/width_drawer</item>
        <item name="android:height">@dimen/height_drawer_item</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="listPreferredItemHeightSmall">@dimen/height_drawer_item</item>
    </style>

</resources>
