<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addnew_page"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/addnew_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:background="@color/addnew_tab_background"
        app:tabIndicatorColor="@color/addnew_tab_indicator_color"
        app:tabSelectedTextColor="@color/addnew_tab_selected_text_color"
        app:tabTextColor="@color/addnew_tab_text_color"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/addnew_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/addnew_tab_container"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>