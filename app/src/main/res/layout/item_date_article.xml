<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/date_article">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/date_article_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_article_container_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/date_ripple">

        <ImageView
            android:id="@+id/tag_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/date_article_title"
            app:layout_constraintBottom_toBottomOf="@+id/date_article_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="25dp"
            app:srcCompat="@drawable/icon_dumbbell"/>

        <TextView
            android:id="@+id/date_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/addnew_text_color"
            android:textSize="18sp"
            tool:text="標題........................"/>

        <TextView
            android:id="@+id/date_article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/date_article_title"
            app:layout_constraintBottom_toBottomOf="@+id/date_article_title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="25dp"
            android:textStyle="italic"
            android:textColor="@color/addnew_text_color"
            android:textSize="16sp"
            tool:text="19 : 00"/>

        <TextView
            android:id="@+id/date_article_content"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/date_article_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/addnew_text_color"
            tool:text="最近要增肌，加了一些不一樣的吃法，希望幾個月後能夠有不一樣的體態，也希望大家能夠多多交流，YA!最近要增肌，加了一些不一樣的吃法，希望幾個月後能夠有不一樣的體態，也希望大家能夠多多交流，YA!最近要增肌，加了一些不一樣的吃法，希望幾個月後能夠有不一樣的體態，也希望大家能夠多多交流，YA!最近要增肌，加了一些不一樣的吃法，希望幾個月後能夠有不一樣的體態，也希望大家能夠多多交流，YA!最近要增肌，加了一些不一樣的吃法，希望幾個月後能夠有不一樣的體態，也希望大家能夠多多交流，YA!"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>