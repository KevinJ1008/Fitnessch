    <android.support.constraint.ConstraintLayout
        android:id="@+id/addnew_timer_btn"
        android:layout_width="@dimen/addnew_btn_width"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_weight"
        app:layout_constraintLeft_toLeftOf="@+id/addnew_schedule_weight"
        app:layout_constraintRight_toRightOf="@+id/addnew_weight_edittext"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/addnew_clock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/clock_btn_selector" />

        <Chronometer
            android:id="@+id/addnew_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/addnew_text_color"
            android:textSize="16sp"
            android:visibility="invisible"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/addnew_start_btn"
        android:layout_width="@dimen/addnew_btn_width"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/addnew_schedule_weight"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_weight"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/addnew_start_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowRadius="8"
            android:shadowDy="8"
            android:shadowDx="3"
            android:shadowColor="@color/addnew_btn_shadow_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="invisible"
            android:textColor="@color/addnew_text_color"
            android:textSize="14sp"
            android:text="開始"/>




