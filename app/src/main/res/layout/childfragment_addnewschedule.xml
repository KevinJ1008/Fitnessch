<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/addnew_schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        android:textColor="@color/addnew_text_color"
        android:text="項目："/>

    <EditText
        android:id="@+id/addnew_schedule_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/addnew_schedule_title"
        app:layout_constraintLeft_toRightOf="@+id/addnew_schedule_title"
        app:layout_constraintRight_toLeftOf="@id/addnew_schedule_btn"
        app:layout_constraintBottom_toBottomOf="@id/addnew_schedule_title"
        android:background="@drawable/addnew_edittext_background"/>

    <Button
        android:id="@+id/addnew_schedule_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/addnew_btn_height"
        app:layout_constraintTop_toTopOf="@+id/addnew_schedule_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/addnew_schedule_edittext"
        app:layout_constraintBottom_toBottomOf="@id/addnew_schedule_title"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        android:shadowRadius="8"
        android:shadowDy="8"
        android:background="@drawable/addnew_btn_ripple"
        android:textColor="@color/white"
        android:text="新增"/>

    <TextView
        android:id="@+id/addnew_schedule_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_title"
        app:layout_constraintLeft_toLeftOf="@id/addnew_schedule_title"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        android:textColor="@color/addnew_text_color"
        android:text="重量："/>

    <EditText
        android:id="@+id/addnew_weight_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/addnew_schedule_weight"
        app:layout_constraintLeft_toRightOf="@id/addnew_schedule_weight"
        app:layout_constraintRight_toRightOf="@id/addnew_start_btn"
        app:layout_constraintBottom_toBottomOf="@+id/addnew_schedule_weight"
        android:background="@drawable/addnew_edittext_background"/>

    <TextView
        android:id="@+id/addnew_schedule_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/addnew_schedule_weight"
        app:layout_constraintRight_toLeftOf="@id/addnew_reps_edittext"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        android:textColor="@color/addnew_text_color"
        android:text="次數："/>

    <EditText
        android:id="@+id/addnew_reps_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/addnew_schedule_btn"
        app:layout_constraintLeft_toLeftOf="@id/addnew_schedule_btn"
        app:layout_constraintTop_toTopOf="@+id/addnew_schedule_reps"
        app:layout_constraintBottom_toBottomOf="@id/addnew_schedule_reps"
        android:background="@drawable/addnew_edittext_background"/>

    <Button
        android:id="@+id/addnew_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/addnew_btn_height"
        app:layout_constraintLeft_toRightOf="@id/addnew_schedule_weight"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_weight"
        android:layout_marginTop="10dp"
        android:shadowRadius="8"
        android:shadowDy="8"
        android:background="@drawable/addnew_btn_ripple"
        android:textColor="@color/white"
        android:text="開始"/>

    <Button
        android:id="@+id/addnew_rest_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/addnew_btn_height"
        app:layout_constraintLeft_toRightOf="@id/addnew_schedule_reps"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_reps"
        android:layout_marginTop="10dp"
        android:shadowRadius="8"
        android:shadowDy="8"
        android:background="@drawable/addnew_btn_ripple"
        android:textColor="@color/white"
        android:text="開始"/>

    <View
        android:id="@+id/addnew_schedule_separator"
        android:layout_width="320dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/addnew_start_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@color/white_70_transparent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_addnew_schedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/addnew_schedule_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"/>

</android.support.constraint.ConstraintLayout>