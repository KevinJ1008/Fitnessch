    <ImageView
        android:id="@+id/addnew_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@id/addnew_schedule_reps"
        app:layout_constraintRight_toRightOf="@+id/addnew_reps_edittext"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_reps"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/add_btn_selector" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/addnew_rest_btn"
        android:layout_width="@dimen/addnew_btn_width"
        android:layout_height="@dimen/addnew_btn_height"
        app:layout_constraintLeft_toRightOf="@id/addnew_schedule_reps"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_reps"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:elevation="@dimen/addnew_btn_elevation"
        android:translationZ="@dimen/addnew_btn_translationz"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/addnew_btn_ripple">

        <TextView
            android:id="@+id/addnew_rest_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowRadius="8"
            android:shadowDy="8"
            android:shadowDx="3"
            android:shadowColor="@color/addnew_btn_shadow_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="invisible"
            android:textColor="@color/addnew_text_color"
            android:textSize="14sp"
            android:text="休息"/>

        <Chronometer
            android:id="@+id/addnew_rest_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/addnew_text_color"
            android:textSize="14sp"
            android:visibility="invisible"/>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/addnew_schedule_separator"
        android:layout_width="320dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/addnew_start_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@color/white_70_transparent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_addnew_schedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/addnew_schedule_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/addnew_schedule_complete_btn"
        android:layout_width="@dimen/addnew_complete_btn_width"
        android:layout_height="@dimen/addnew_complete_btn_height"
        app:layout_constraintRight_toRightOf="@+id/addnew_rest_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:shadowRadius="8"
        android:shadowDy="8"
        android:shadowDx="3"
        android:shadowColor="@color/addnew_btn_shadow_color"
        android:elevation="@dimen/addnew_btn_elevation"
        android:translationZ="@dimen/addnew_btn_translationz"
        android:background="@drawable/addnew_btn_ripple"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="invisible"
        android:text="完成"/>

    <ImageView
        android:id="@+id/addnew_schedule_next_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/addnew_btn"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/next_btn_selector" />

</android.support.constraint.ConstraintLayout>