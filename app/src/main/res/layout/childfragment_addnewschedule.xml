<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/childfragment_addnewschedule"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/addnew_schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        android:textColor="@color/addnew_text_color"
        android:text="項目："/>

    <EditText
        android:id="@+id/addnew_schedule_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/addnew_schedule_title"
        app:layout_constraintLeft_toRightOf="@+id/addnew_schedule_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/addnew_schedule_title"
        android:layout_marginEnd="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/addnew_text_color"
        android:inputType="text"
        android:background="@drawable/addnew_edittext_background"
        android:visibility="invisible"/>

    <AutoCompleteTextView
        android:id="@+id/addnew_schedule_auto_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/addnew_schedule_title"
        app:layout_constraintLeft_toRightOf="@+id/addnew_schedule_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/addnew_schedule_title"
        android:layout_marginEnd="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/addnew_text_color"
        android:inputType="text"
        android:background="@drawable/addnew_edittext_background">
        <requestFocus/>
    </AutoCompleteTextView>

    <Button
        android:id="@+id/addnew_schedule_btn"
        android:layout_width="@dimen/addnew_btn_width"
        android:layout_height="@dimen/addnew_btn_height"
        app:layout_constraintTop_toTopOf="@+id/addnew_schedule_title"
        app:layout_constraintRight_toRightOf="@+id/addnew_schedule_edittext"
        app:layout_constraintBottom_toBottomOf="@id/addnew_schedule_title"
        android:layout_marginStart="10dp"
        android:shadowRadius="8"
        android:shadowDy="8"
        android:shadowDx="3"
        android:shadowColor="@color/addnew_btn_shadow_color"
        android:elevation="@dimen/addnew_btn_elevation"
        android:translationZ="@dimen/addnew_btn_translationz"
        android:visibility="invisible"
        android:background="@drawable/addnew_btn_ripple"
        android:textColor="@color/addnew_text_color"
        android:textSize="14sp"
        android:text="新增"/>

    <TextView
        android:id="@+id/addnew_schedule_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addnew_schedule_title"
        app:layout_constraintLeft_toLeftOf="@id/addnew_schedule_title"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        android:textColor="@color/addnew_text_color"
        android:text="重量："/>

    <EditText
        android:id="@+id/addnew_weight_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/addnew_schedule_weight"
        app:layout_constraintLeft_toRightOf="@id/addnew_schedule_weight"
        app:layout_constraintRight_toRightOf="@id/addnew_start_btn"
        app:layout_constraintBottom_toBottomOf="@+id/addnew_schedule_weight"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="number"
        android:hint="KG"
        android:textColorHint="@color/new_schedule_article_title_edit_color"
        android:textColor="@color/addnew_text_color"
        android:background="@drawable/addnew_edittext_background"/>

