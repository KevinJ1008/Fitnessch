        android:id="@+id/addnew_schedule_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/addnew_schedule_weight"
        app:layout_constraintRight_toLeftOf="@id/addnew_reps_edittext"
        android:paddingTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        android:textColor="@color/addnew_text_color"
        android:text="次數："/>

    <EditText
        android:id="@+id/addnew_reps_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/addnew_schedule_btn"
        app:layout_constraintLeft_toLeftOf="@id/addnew_schedule_btn"
        app:layout_constraintTop_toTopOf="@+id/addnew_schedule_reps"
        app:layout_constraintBottom_toBottomOf="@id/addnew_schedule_reps"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="number"
        android:textColor="@color/addnew_text_color"
        android:background="@drawable/addnew_edittext_background"/>

