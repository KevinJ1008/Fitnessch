<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <View
        android:id="@+id/meal_separator"
        android:layout_width="@dimen/width_all_separator"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@color/white_70_transparent"/>

    <TextView
        android:id="@+id/addnew_meal_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/meal_separator"
        app:layout_constraintLeft_toLeftOf="parent"
        android:maxWidth="280dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/addnew_text_color"
        tool:text="鹽烤雞胸肉....................................................."/>

</android.support.constraint.ConstraintLayout>