<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_meal_child_item_default_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/meal_child_article_default_container"
        android:layout_width="@dimen/width_meal_child_item"
        android:layout_height="@dimen/height_meal_child_item"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/meal_child_item_background">

        <TextView
            android:id="@+id/meal_child_default_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/meal_child_default_create_time"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/meal_child_text_color"
            tool:text="吃吃吃吃吃吃吃吃吃吃吃吃吃吃吃吃吃吃吃吃吃"/>

        <TextView
            android:id="@+id/meal_child_default_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/meal_child_default_title"
            android:layout_marginEnd="15dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/meal_child_text_color"
            tool:text="10 月 22 日"/>

        <TextView
            android:id="@+id/meal_child_default_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/meal_child_default_title"
            app:layout_constraintTop_toBottomOf="@+id/meal_child_default_title"
            app:layout_constraintRight_toRightOf="@+id/meal_child_default_create_time"
            android:layout_marginTop="15dp"
            android:lines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="6sp"
            android:textSize="14sp"
            android:textColor="@color/meal_child_text_color"
            tool:text="要變壯就是要吃！！！！除此之外別無他法，但對東西，以下介紹我最近在嘗試的菜單，三分練七分吃，祝大家早日成為巨巨~~~~~~~~~~~~~~~~~~~~~~~~~"/>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>