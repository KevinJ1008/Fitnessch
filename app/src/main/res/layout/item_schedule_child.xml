<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_schedule_child_item_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/schedule_child_article_container"
        android:layout_width="@dimen/width_schedule_child_item"
        android:layout_height="@dimen/height_schedule_child_item"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/schedule_child_item_background">

        <TextView
            android:id="@+id/schedule_child_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/schedule_child_create_time"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/schedule_child_text_color"
            tool:text="周一胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸胸"/>

        <TextView
            android:id="@+id/schedule_child_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/schedule_child_title"
            android:layout_marginEnd="15dp"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/schedule_child_text_color"
            tool:text="10 月 22 日"/>

        <TextView
            android:id="@+id/schedule_child_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/schedule_child_title"
            app:layout_constraintTop_toBottomOf="@+id/schedule_child_title"
            app:layout_constraintRight_toRightOf="@id/schedule_child_create_time"
            android:layout_marginTop="15dp"
            android:lines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="6sp"
            android:textSize="14sp"
            android:textColor="@color/schedule_child_text_color"
            tool:text="今天一個胸爆炸，嘗試了一些不一樣的組合，感受度滿滿滿，有興趣的可以去嘗試看看，有其他意見可以多多交流喔，祝大家早日成為巨巨~~~~~~~~~~~~~~~~~~~~~~~~~"/>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>